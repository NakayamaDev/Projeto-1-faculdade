                                                                        system("cls");
                                                                    break;

                                                                    case 8:
                                                                        do{
                                                                            printf("\nSenha registrado: %s",admin[w[38]].senha);
                                                                            printf("\nDeseja alterar?");
                                                                            scanf(" %c",&op);
                                                                            fflush(stdin);
                                                                            system("cls");
                                                                        }while(op != 's');
                                                                        printf("\nSenha:");
                                                                        scanf(" %[^\n]s",admin[w[38]].senha);
                                                                        fflush(stdin);
                                                                        system("cls");
                                                                    break;

                                                                }

                                                                printf("deseja ver a ficha complete?");
                                                                scanf(" %d",&menu[12]);
                                                                fflush(stdin);
                                                                system("cls");
                                                                if(menu[12] != 's'){
                                                                    printf("\nNome: %s", admin[w[38]].nome);
                                                                    printf("\nCpf: %s", admin[w[38]].cpf);
                                                                    printf("\nIdade: %d",admin[w[38]].idade);
                                                                    printf("\nSalario: %d",admin[w[38]].benef.salario);
                                                                    printf("\nVale alimentacao: %d",admin[w[38]].benef.alimentacao);
                                                                    printf("\nVale Trasporte: %d",admin[w[38]].benef.trasporte);
                                                                    printf("\nLogin: %s",admin[w[38]].login);
                                                                    printf("\nsenha: %s",admin[w[38]].senha);
                                                                }
                                                                printf("\nModificar mais algo neste usuario?");
                                                                scanf(" %c",&sair);
                                                                fflush(stdin);
                                                                system("cls");
                                                            }while(sair == 's');
                                                            printf("\nModificar outro usuario(adiministrador)?");
                                                            scanf(" %c",&sair);
                                                            fflush(stdin);
                                                            system("cls");
                                                        }while(sair != 's');
                                                    break;
                                                }
                                                printf("\nDeseja registrar novo funcionario?");
                                                scanf(" %c", &sair);
                                                fflush(stdin);
                                                system("cls");
                                            }while(sair == 's');
                                        break;
                                        
                                        case 4:
                                            do{
                                                printf("Registrar Gasto:");
                                                scanf("%f",&financas.saida[w[42]]);
                                                fflush(stdin);
                                                system("cls");

                                                w[42]++;
                                                printf("\nRegistrar outro gasto?"); 
                                                scanf(" %c",&sair);
                                                fflush(stdin);
                                                system("cls"); 
                                            }while(sair == 's');
                                        break;
                                        
                                        case 5:
                                            //medico
                                            y[7] = y[1]/100*y[3];
                                            y[8] = y[1]/100*y[5];
                                            y[9] = y[1]/100*y[6];
                                            y[10]= y[7]+y[8]+y[9];//total
                                            //administrador
                                            y[11] = y[2]/100*y[3];
                                            y[12] = y[2]/100*y[5];
                                            y[13] = y[2]/100*y[6];
                                            y[14] = y[11]+y[12]+y[13];//total
                                            //funcionario
                                            y[15] = y[0]/100*y[3];
                                            y[16] = y[0]/100*y[5];
                                            y[17] = y[0]/100*y[6];
                                            y[18]= y[16]+y[17]+y[15];

                                            printf("\n--------------------------------------------");
                                            printf("\nExibindo Relatorio ate o momento das finaças");
                                            printf("\nMedico  %.2f                                ",y[1]);
                                            printf("\n%.2f / %.1f%   = %.2f R$                    ",y[1],y[3],y[7]);
                                            printf("\n%.2f / %.1f%   = %.2f R$                    ",y[1],y[5],y[8]);
                                            printf("\n%.2f / %.1f%   = %.2f R$                    ",y[1],y[5],y[9]);
                                            printf("\n--------------------------------------------");
                                            printf("\ntotal Desconto = %.2f                       ",y[10]);
                                            printf("\n                                            ");
                                            printf("\nbonificação de 5 por dia = 155              ");
                                            printf("\n                                            ");
                                            printf("\ntotal salaraio = 6759.00                    ");
                                            printf("\n--------------------------------------------");
                                            printf("\nvalor do vale alimentacao: 43.60 p/ dia     ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\nvalor do vale Trasporte: 05.50 p/ dia       ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\n--------------------------------------------");
                                            printf("\n                                            ");
                                            printf("\nAdministrador %.2f                          ",y[2]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[2],y[3],y[11]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[2],y[5],y[12]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[2],y[5],y[13]);
                                            printf("\n--------------------------------------------");
                                            printf("\ntotal Desconto = %.2f                       ",y[14]);
                                            printf("\n                                            ");
                                            printf("\nbonificação de 6.75 por dia = 309.25        ");
                                            printf("\n                                            ");
                                            printf("\ntotal salaraio = 3612.00                    ");
                                            printf("\n--------------------------------------------");
                                            printf("\nvalor do vale alimentacao: 26.95 p/ dia     ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\nvalor do vale Trasporte: 05.50 p/ dia       ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\n--------------------------------------------");
                                            printf("\n                                            ");
                                            printf("\nFuncionario %.2f                            ",y[0]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[0],y[3],y[15]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[0],y[5],y[16]);
                                            printf("\n%.2f / %.2f  = %.2f R$                      ",y[0],y[6],y[17]);
                                            printf("\n--------------------------------------------");
                                            printf("\ntotal Desconto = %.2f                       ",y[18]);
                                            printf("\n                                            ");
                                            printf("\nbonificacaoo de 7.75 por dia = 240.25        ");
                                            printf("\n                                            ");
                                            printf("\ntotal salaraio = 1123.00                    ");
                                            printf("\n--------------------------------------------");
                                            printf("\nvalor do vale alimentação: 21.00 p/ dia     ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\nvalor do vale Trasporte: 05.50 p/ dia       ");
                                            printf("\n31 dias trabalhados                         ");
                                            printf("\n--------------------------------------------");
                                            printf("\n--------------------------------------------");
                                            printf("\nseguir?");
                                            scanf(" %c",&sair);
                                            fflush(stdin);
                                            system("cls");

                                            printf("\nQuantas consultas tivemos ate agora?");
                                            scanf("%d",&w[61]);
                                            fflush(stdin);
                                            if(sair == 's'){
                                                printf("\nVizualisar Funcionarios?");
                                                scanf(" %c",&sair);
                                                fflush(stdin);        
                                                if(sair == 's'){
                                                    printf("\nFuncionarios..");
                                                    for(w[45]=0;w[45]<w[1];w[45]++){
                                                        printf("\n[%d] %s \nGasto: 1946.00 R$",w[45],func[w[45]].nome);
                                                    }
                                                    printf("\n\n\n\nAdminins..");
                                                    for(w[55]=0;w[55]<w[25];w[55]++){
                                                        printf("\n[%d] %s\nGasto: 5666,70 R$",w[55],admin[w[55]].nome);
                                                    }
                                                    printf("\n\n\n\nMedicos...");
                                                    for(w[54]=0;w[54]<w[35];w[54]++){
                                                        printf("\n[%d] %s\nGasto: 8856.00 R$",w[54],medic[w[54]].nome);
                                                    }
                                                }
                                            }
                                            printf("\nVolta ao menu?");
                                            scanf(" %c",&sair);
                                            fflush(stdin);
                                            system("cls");
                                        break;

                                        case 6:
                                            do{
                                                system("cls");
                                                printf("Leitura da reclamação");
                                                for(w[47]=w[49];w[47]<w[48];w[47]++){
                                                    scanf(" %[^\n]s",&reclamacao[w[47]]);
                                                    fflush(stdin); 
                                                    system("cls");    
                                                }

                                                printf("\n<(n)--Navegue nas listas --(s)>\t\t Aperte c para sair\n");
                                                scanf(" %c", &op);
                                                fflush(stdin);
                                                system("cls");
                                                if(op ==  'n'){
                                                    if(w[49]<=10000){
                                                        w[49] = w[49] - 5;
                                                        w[48] = w[48] - 5;                                                        	
                                                    }
                                                }
                                                if(op ==  's'){
                                                    if(w[48]<10000){
                                                        w[49] = w[49] + 5;
                                                        w[48] = w[48] + 5;
                                                    }          
                                                }
                                                
                                            }while(op != 'c');
                                            printf("Volta ao menu?");
                                            scanf(" %c",&sair);
                                            fflush(stdin);
                                            system("cls");
                                        break;

                                        case 7:
                                            logout == 1;
                                        break;
                                    }
                                }while(sair != 'n');
                                strcpy(logini, "0");
                                strcpy(senhai, "0");
                            }else{
                                printf("Senha incorreta");
                            }
                        }
                    }
			    }while((strcmp(logini,admin[w[24]].login) != 0 && strcmp(senhai,admin[w[24]].senha) == 0) || (strcmp(logini,admin[w[24]].login) == 0 && strcmp(senhai,admin[w[24]].senha) != 0) || (strcmp(logini,admin[w[24]].login) != 0 && strcmp(senhai,admin[w[24]].senha) != 0));
            break;
        } 
    }while(logout != 1);

    return 0;
}

